generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  name      String 
  password  String
  phone     String
  email     String @unique
  collegeId Int?
  rides     Ride[]
  createdRides Ride[] @relation("RideCreatedByUser")
}

model Ride {
  id               Int      @id @default(autoincrement())
  fromPoint        String
  toPoint          String
  isPublic         Boolean
  seatsAvailable   Int
  users            User[]
  name             String
  rideDate         DateTime
  rideCreationDate DateTime @default(now())
  createdBy        User     @relation("RideCreatedByUser", fields: [createdById], references: [id])
  createdById      Int
}